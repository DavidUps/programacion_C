#include <stdio.h>
#include <stdlib.h>

int resultado(int x, int num_p){

    double num[20];

    int resultado=0, potencia[20];

    //guarda los numeros
    printf("dime los numeros: ");
    for(int i=0;i < num_p; i++){
      scanf(" %lf", &num[i]);
    }


    for(int i=0; i+1 < num_p+1; i++){
      potencia[1]= 1;
      potencia[i]= x * i;
    }

    for(int i=0; i < num_p; i++){
      resultado+=potencia[i]*num[i];
    }

}

int main(){ 

    int num_p, x;

    //numero de terminos del polinomio
    printf("dime cuantos numeros vas a poner: ");
    scanf(" %i", &num_p);

    printf(" %i", resultado(x, num_p));


   return EXIT_SUCCESS;
}
