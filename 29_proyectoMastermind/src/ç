char comprobar(int num[F], int adv[F], char adv_fal[F]){
    for (int i=0;i<F;i++){
        if(num[F]==adv[i]){
            adv_fal[i]='p';
        }
    }
}

void imprime(int num[F], char adv_fal[F]){

    for(int i=0; i<F;i++){
        printf("%c", adv_fal[i]);
    }

    printf("\n");

    for(int i=0; i<F; i++){
        printf("%i", num[i]);
    }

    printf("\n");
}
